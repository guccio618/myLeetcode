
public class Q482_License_Key_Formatting {
	public String licenseKeyFormatting(String S, int K) {
        if(S == null || S.length() == 0 || K <= 0) {
            return S;
        } else if(K > S.length()) {
        	return "";
        }
        
        int len = S.length();
        String newStr = S.replaceAll("-", "");
        newStr = newStr.toUpperCase();
        int groupCount = len - newStr.length() + 1;
        
        if(newStr.length() < groupCount * K + 1) {
        	return "";
        }
        
        StringBuilder sb = new StringBuilder();
        int index = newStr.length();
        
        for(int i = 0; i < groupCount - 1; i++) {
        	sb.insert(0, "-" + newStr.substring(index - K, index));
        	index -= K;
        }
        
        sb.insert(0, newStr.substring(0, index));
        return sb.toString();
    }
	
	
	
	
	
	public static void main(String[] args) {
		Q482_License_Key_Formatting t = new Q482_License_Key_Formatting();
		String S = "2-4A0r7-4k";
		int K = 3;
		System.out.println(t.licenseKeyFormatting(S, K));
	}
}
