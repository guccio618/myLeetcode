public class Amazon_OA2_Overlap_Rectangle {
	/*************************************************
	 * Rect 1: top-left(A, B), bottom-right(C, D)
	 * Rect 2: top-left(E, F), bottom-right(G, H)
	 * 
	 *************************************************/
	// 计算重叠面积
	public int computeArea(int A, int B, int C, int D, int E, int F, int G, int H) {
		int innerL = Math.max(A, E);
		int innerR = Math.max(innerL, Math.min(C, G));
		int innerT = Math.max(B, F);
		int innerB = Math.max(innerT, Math.min(D, H));
		
		int area1 = Math.abs((C - A) * (B - D));
		int area2 = Math.abs((G - E) * (F - H));
		int area3 = Math.abs((innerR - innerL) * (innerB - innerT));
		
		return area1 + area2 - area3;
	}
	
	// 判断两个rectangle是否重叠
	public boolean doOverlap(Point l1, Point r1, Point l2, Point r2){
		if(l1.x > r2.x || l2.x < r1.x){
			return false;
		} else if(l1.y < r2.y || l2.y > r1.y){
			return false;
		} else {
			return true;
		}
	}
	
	
	
	public static void main(String[] args){
		Amazon_OA2_Overlap_Rectangle t = new Amazon_OA2_Overlap_Rectangle();
		System.out.println(t.computeArea(-2, -2, 2, 2, -2, -2, 2, 2));
	}
}
