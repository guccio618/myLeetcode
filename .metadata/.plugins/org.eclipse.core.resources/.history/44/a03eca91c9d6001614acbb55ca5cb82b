
public class Q456_132_Pattern {
	public boolean find132pattern(int[] nums) {
        if(nums == null || nums.length <= 2) {
            return false;
        }
        
        int[] array = new int[3];
        array[0] = array[2] = Integer.MAX_VALUE;
        array[1] = Integer.MIN_VALUE;
        
        for(int num : nums) {
            if(num < array[0]) {
                array[0] = num;
            } else if(num > array[1]) {
                array[1] = num;
            } else if(num < array[2]) {
                array[2] = num;
            }
            
            if(array[2] != Integer.MAX_VALUE) {
                return true;
            }
        }
        
        return false;
    }
}
